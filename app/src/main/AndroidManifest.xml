<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.collection.kubera"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:name=".KuberaApplication"
        android:theme="@style/Theme.Kubera"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Kubera">
        </activity>

        <activity android:name=".ui.landing.LandingActivity"
            android:exported="true"
            android:label="Welcome"
            android:theme="@style/Theme.Kubera">
        </activity>

        <activity android:name=".ui.login.LoginActivity"
            android:exported="true"
            android:label="Login"
            android:theme="@style/Theme.Kubera">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.registration.RegistrationActivity"
            android:exported="true"
            android:label="Register new user"
            android:theme="@style/Theme.Kubera">
        </activity>
        <activity android:name=".ui.updatecredentials.UpdateCredentialActivity"
            android:exported="true"
            android:label="Update credentials"
            android:theme="@style/Theme.Kubera">
        </activity>

    </application>

</manifest>